/* pages/address/index.wxss */
.navigotion{
    margin-top: 50rpx;
    /* min-height: 80rpx; */
    /* display: flex;
    align-items: center; */
}
.nav_text{
    padding-left: 30rpx;
    line-height: 70rpx;
}
.address_page{
    background-color: #F7F7F7;
    min-height: 100vh;
}

.shadow{
    /* display: none; */
    position: absolute;
    top: 0;
    background-color: #4b4a4a;
    opacity: 0.5;
    width:100%;
    height: 100%;
    z-index: 100;
}
.alert_box{
    position: absolute;
    top:50%;
    left: 50%;
    transform: translateX(-50%);
    background-color: #fff;
    width: 400rpx;
    z-index: 1000;
    text-align: center;
    padding: 40rpx 30rpx 30rpx 20rpx;
    border-radius: 20rpx;
}
.alert_title{
}
.alert_bth{
    display: flex;
    margin-top: 30rpx;
}
.cancel_btn{
    flex:1;
    border: 1px solid rgb(201, 200, 200);
    border-radius: 20rpx;
    margin-right: 10rpx;
    padding: 4rpx;
    font-size: 24rpx;
}
.confirm_btn{
    flex:1;
    border-radius: 20rpx;
    background-color: red;
    color: #fff;
    padding: 4rpx;
    font-size: 24rpx;
    margin-left: 10rpx;
}
.address_cont{
    background-color:#fff;
    width: 100vw;
    overflow: hidden;
}
.scroll{
    height:90vh;
}
.address_items{

    /* height:100%; */
}
.scroll2{
    height: 100%;
}
.scrollx{
    display: flex;
    position: relative;
    width:100vw;
    height:100%;
    align-items: center;
}

.addr_box{
    flex: 9;
    margin-left: 30rpx;
    padding: 20rpx 0;
    padding-right: 30rpx;
    border-bottom: 2px solid #F7F7F7;
    height:100%;
}
.delete{
    /* flex: 5; */
    width:250rpx;
    position: absolute;
    display: flex;
    align-items: center;
    right:-250rpx;
    text-align: center;
    height:100%;
}
.defau{
    background-color: rgb(233, 230, 230);
    flex: 1;
    height:100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #333;
}
.del_text{
    flex: 1;
    background-color: red;
    color: #fff;
    height:inherit;
    display: flex;
    align-items: center;
    justify-content: center;
}
.user_info{
    font-weight: bold;
}
.name{
    margin-right: 10rpx;
}
.phone_num{

}
.address_text{
    display: flex;
}
.address{
    flex: 9;
    margin-top: 5rpx;
    font-size: 26rpx;
    color: rgb(126, 126, 126);
    line-height: 40rpx;
    margin-top:10rpx;
}

.default_text{
    color:red;
    border: 1px solid red;
    padding:0rpx 7rpx;
    font-size:20rpx;
    text-align:center;
}

.edit{
    flex: 1;
    text-align: right;
    color: red;
    font-size: 26rpx;
}
.add_button{
    position: fixed;
    display: flex;
    bottom: 0;
    width: 100%;
    padding: 30rpx 0;
    background-color: #fff;
    justify-content: space-around;
}
.wx_import button{
    font-weight: normal;
    font-size: 30rpx;
    border: 1px solid #CCCCCC;
    border-radius: 40rpx;
    background-color: #fff;
}
.add_newAdress button{
    background-color: red;
    color: #fff;
    border: none;
}
.wx_icon{
    color: #0ED069;
    margin-right: 10rpx;
}